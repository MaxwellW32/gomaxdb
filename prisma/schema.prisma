// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model base {
  username String
  text     String @db.Text

  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  speed     Int      @default(500)
  gravity   Int      @default(500)
  shapes    String   @default("BA")
  colors    String   @default("red|blue")
  angle     Int      @default(0)
  audioLink String?  @db.Text
  ytLinks   String?  @db.Text
  imgLinks  String?  @db.Text
}
